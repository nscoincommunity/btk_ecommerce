{{ header }}{{ column_left }}
<div id="content">
<!--header, breadcrumb & button-->
<div class="page-header">
  <div class="container-fluid">
   <div class="pull-right">
    <button type="submit" form="form-midtrans-snapinst" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
    <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a>
   </div>
   <h1>{{ heading_title }}</h1>
   <ul class="breadcrumb">
    {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
    {% endfor %}
   </ul>
  </div>
</div>
<!--header, breadcrumb & button-->


 <div class="container-fluid">
   
   <!--error-->
   {% if error_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
     <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
   {% endif %}
   <!--error-->

   <div class="panel panel-default">
    <div class="panel-heading">
	 <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
    </div>

	<div class="panel-body">
	 <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-midtrans-snap" class="form-horizontal">
	 <div class="form-group">
      <label class="col-sm-2 control-label" for="input-mode"> {{ entry_status }} </label>
		<div class="col-sm-3">
		 <select name="payment_snapio_status" id="input-status" class="form-control">
		   
		    {% if payment_snapio_status %}
             <option value="1" selected="selected">{{ text_enabled }}</option>
             <option value="0">{{ text_disabled }}</option>
             {% else %}
              <option value="1">{{ text_enabled }}</option>
              <option value="0" selected="selected">{{ text_disabled }}</option>
            {% endif %}

		  </select>
		</div>
	 </div>
	<!-- Status -->

	<div class="form-group required sensitive">
	  <label class="col-sm-2 control-label" for="input-merchant-id">{{ entry_display_name }}</label>
	    <div class="col-sm-3">
		  <input type="text" name="payment_snapio_display_name" value="{{ payment_snapio_display_name }}" placeholder="{{ payment_snapio_display_name }}" id="input-merchant-id" class="form-control" />
		</div>
		<div class="col-sm-3">
		 {% if error_display_name %}
			<div class="col-sm-3"> {{ error_display_name }} </div>
		 {% endif %}
		</div>
	</div>
	<!-- Display name -->

	<div class="form-group sensitive required">
	  <label class="col-sm-2 control-label" for="input-mode">{{ entry_environment }}</label>
	    <div class="col-sm-3">
		  <select name="payment_snapio_environment" id="input-mode" class="form-control">
		    {% if payment_snapio_environment == 'sandbox' %}
                <option value="sandbox" selected="selected">{{ text_sandbox }}</option>
            {% else %}
                <option value="sandbox">{{ text_sandbox }}</option>
            {% endif %}
            {% if payment_snapio_environment == 'production' %}
                <option value="production" selected="selected">{{ text_live }}</option>
            {% else %}
                <option value="production">{{ text_live }}</option>
            {% endif %}
		  </select>
		</div>
		<div class="col-sm-3">
		 {% if error_environment %}
		  <div class="col-sm-3"> {{ error_environment }} </div>
		{% endif %}
		</div>
	</div>
	<!-- Environment (v2-specific) -->

	<div class="form-group required sensitive">
	  <label class="col-sm-2 control-label" for="input-merchant-id">{{ entry_merchant_id }}</label>
	    <div class="col-sm-3">
		  <input type="text" name="payment_snapio_merchant_id" value="{{ payment_snapio_merchant_id }}" placeholder="{{ payment_snapio_merchant_id }}" id="input-merchant-id" class="form-control" />
		</div>
		<div class="col-sm-3">
		 {% if error_merchant_id %}
			<div class="col-sm-3"> {{error_merchant_id}} </div>
		 {% endif %}
		</div>
	</div>
	<!-- Merchant Id -->
						
	<div class="form-group required sensitive">
	  <label class="col-sm-2 control-label" for="input-merchant-id">{{ entry_client_key }}</label>
	    <div class="col-sm-3">
		  <input type="text" name="payment_snapio_client_key" value="{{ payment_snapio_client_key }}" placeholder="{{ payment_snapio_client_key }}" id="input-merchant-id" class="form-control" />
		</div>
		<div class="col-sm-3">
		 {% if error_client_key %}
			<div class="col-sm-3"> {{error_client_key}} </div>
		 {% endif %}
		</div>
	</div>
	<!-- Client Key (v2-specific) -->


	<div class="form-group required sensitive">
	  <label class="col-sm-2 control-label" for="input-merchant-id">{{ entry_server_key }}</label>
		<div class="col-sm-3">
		  <input type="text" name="payment_snapio_server_key" value="{{ payment_snapio_server_key }}" placeholder="{{ payment_snapio_server_key }}" id="input-merchant-id" class="form-control" />
		</div>
		<div class="col-sm-3">
		 {% if error_server_key %}
		   <div class="col-sm-3"> {{ error_server_key }} ?> </div>
		 {% endif %}
		</div>
	</div>
	<!-- Server Key (v2-specific) --> 

	<div class="form-group required">
	 <label class="col-sm-2 control-label" for="input-merchant-id">{{entry_min_txn}}</label>
	  <div class="col-sm-3">
	   <input type="text" name="payment_snapio_min_txn" value="{{ payment_snapio_min_txn }}" placeholder="{{ payment_snapio_min_txn }}" class="form-control" />
		<span>minimum amount of transaction</span>
	  </div>
	  <div class="col-sm-3">
		{%if error_min_txn %}
		<div class="col-sm-3">{{ error_min_txn }}</div>
		{% endif %}
	  </div>
	</div>
	<!-- min txn -->

	<div class="form-group required">
	 <label class="col-sm-2 control-label" for="input-merchant-id">{{ entry_custom_field }}</label>
	  <div class="col-sm-3">
	   <input type="text" name="payment_snapio_custom_field1" value="{{ payment_snapio_custom_field1 }}" placeholder="{{ payment_snapio_custom_field1 }}" class="form-control" />
	   <span> 'This will allow you to set custom fields that will be displayed on Midtrans dashboard.</span>
	  </div>
	  <div class="col-sm-3">
	   <input type="text" name="payment_snapio_custom_field2" value="{{ payment_snapio_custom_field2 }}" placeholder="{{ payment_snapio_custom_field2 }}" class="form-control" />
	  </div>
	  <div class="col-sm-3">
	   <input type="text" name="payment_snapio_custom_field3" value="{{ payment_snapio_custom_field3 }}" placeholder="{{ payment_snapio_custom_field3 }}" class="form-control" />
	  </div>
	  <div class="col-sm-12">
	  </div>
	</div>
	<!-- custom field -->

	<div class="form-group required">
	 <label class="col-sm-2 control-label" for="input-merchant-id">{{entry_currency_conversion}}</label>
	  <div class="col-sm-3">
	   <input type="text" name="payment_snapio_currency_conversion" value="{{ payment_snapio_currency_conversion }}" placeholder="{{ payment_snapio_currency_conversion }}" class="form-control" />
		<span>Set to 1 if your default currency is IDR</span>
	  </div>
	  <div class="col-sm-3">
		{%if error_currency_conversion %}
		<div class="col-sm-3">{{ error_currency_conversion }}</div>
		{% endif %}
	  </div>
	</div>
	<!-- Currency -->

	<div class="form-group">
	 <label class="col-sm-2 control-label" for="input-merchant-id">{{entry_geo_zone}}</label>
	  <div class="col-sm-3">
	   <select name="payment_snapio_geo_zone_id"  class="form-control">
		<option value="0">{{ text_all_zones }}</option>
		{% for geo_zone in geo_zones  %}
		  {% if geo_zone.geo_zone_id == payment_snapio_geo_zone_id %}
		   <option value="{{ geo_zone.geo_zone_id }}" selected="selected">{{ geo_zone.name }}</option>
		 {% else %}
		   <option value="{{ geo_zone.geo_zone_id }}">{{ geo_zone.name }}</option>
		 {% endif %}
        {% endfor %}
	   </select>
	  </div>
	</div>
	<!-- Geo Zone -->

	<div class="form-group">
	  <label class="col-sm-2 control-label" for="input-merchant-id">{{ entry_sort_order }}</label>
		<div class="col-sm-1">
		 <input size="1" type="text" name="payment_snapio_sort_order" value="{{ payment_snapio_sort_order }}" placeholder="{{ payment_snapio_sort_order }}" class="form-control" />
		</div>
	</div>
	
	<div>
	 <center><font size="1">version 1.0</font></center>
	</div>

   </form>
  </div>
 </div>
</div>		
<!-- content -->
</div>

{{ footer }} 